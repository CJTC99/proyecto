<div class="container p-4">

    <div class="row">

        {{#each tareas}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        
                        <p class="m-2">
                            {{description}}
                        </p>
                        <p>
                            {{timeago created_at}}
                        </p>
                        <a href="/homework/delete/{{id}}" class="btn btn-danger">
                            Borrar
                        </a>
                        <a href="/homework/edit/{{id}}" class="btn btn-secondary">
                            Editar
                        </a>
                    </div>
                </div>
            </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>
                    No hay tareas creadas a√∫n UnU
                    <br>
                    <a href="/homework/add">
                        Crear  tarea UwUr
